/*
 * CTAs
 */
 
body.home
    .ctas
        width 100%
        list-style none
        padding 0
        margin 0
        flex_box()
        flex_wrap(nowrap)
        flex_direction(column)
        li
            width 100%
            display inline-block
            // font-size 18px
            // line-height 20px
            letter-spacing: -0.02em;
            text-align center
            margin 0 0 10px
            background var(--yellow)
            &:nth-child(2)
                background var(--green)
            &:nth-child(3)
                background var(--pink)
            &:last-child
                margin-bottom 0
            a
                display block
                padding 0.8em
                text-decoration none
                text-transform uppercase
        @media (min-width: $tablet)
            flex_direction(row)
            li
                width 33.333%
                margin 0

