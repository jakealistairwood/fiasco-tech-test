/*
 * Hero
 */
 

// LOADING ANIMATIONS
.home .hero.with-video
	.columns
		transform( scale(0), rotate(-90deg) )
		transition( transform 0.3s 1s cubic-bezier(0.7, -0.4, 0.4, 1.4) )
		&::before
			transform( scale(0),rotate(0deg) )
			transition( transform 0.3s 1s cubic-bezier(0.7, -0.4, 0.4, 1.4) )
.home.loaded .hero.with-video
	.columns
		&::before
			transform( scale(1),rotate(-12deg) )
			transition( transform 0.3s 1s cubic-bezier(0.7, -0.4, 0.4, 1.4) )
	.columns
		transform( scale(1), rotate(0deg) )
		transition( transform 0.3s 1s cubic-bezier(0.7, -0.4, 0.4, 1.4) )

body.home
	.hero
		background var(--darkgreen)
		overflow hidden
		.contained
			padding-top 102px
			padding-bottom 48px
			z-index 3
			h1, p
				color #fff
			.annotation
				display block
				width 170px
				margin-top $margin *2
				margin-bottom $margin *2
		.video-wrapper
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			overflow hidden
			z-index 1
			&::after
				content ""
				display block
				position absolute
				top 0
				left 0
				width 100%
				height 100%
				background rgba(45, 50, 50, 0.5)
				z-index 2
			video
				position absolute
				top 50%
				left 50%
				width auto
				height auto
				min-height 100%
				min-width 100%
				transform(translate(-50%,-50%))
				z-index 2
		@media (max-width: 767px)
			.contained .columns .column.column-media img
				display none
			.video-wrapper
				display none
			+ .ctas
				display none !important
		@media (min-width: $tablet)
			&.with-video
				height calc(100vh - 46px)
				min-height 640px
				max-height 768px
			&.with-image
				height calc(100vh - 46px)
				min-height 640px
				max-height 768px
			.contained
				height 100%
				flex_box()
				justify_content(center)
				padding-top 150px
				padding-bottom 80px
				.columns
					flex_direction(row)
					align_items(center)
					justify_content(center)
					.column
						flex_basis(50%)
						margin-bottom 0
						&.column-media
							margin-right "calc((-100vw + %s) / 2)" % $tablet-content-width
							img
								clip-path polygon(0 0, 100% 0, 100% 80%, 45px 100%)
				.annotation
					margin 0
				.ctas
					display none
			.video-wrapper
				+ .contained
					padding-bottom 0
					margin-top 45px
					.columns
						position relative
						margin-top auto
						margin-left -100px
						padding 100px 70px 100px 100px
						&::before
							top 0
							right -50px
							content ""
							position absolute
							width 150%
							height 150%
							background var(--darkgreen)
							opacity 0.6
							z-index -1
		@media (min-width: $laptop)
			.contained .columns .column
				&.column-media
					margin-right "calc((-100vw + %s) / 2)" % $desktop-content-width
					img
						clip-path polygon(0 0, 100% 0, 100% 80%, 90px 100%)
		@media (min-width: $desktop)
			height auto !important
			&.with-video
				max-height none
			&.with-image
				min-height calc(100vh - 46px)
				max-height 1024px
			.contained
				padding-top 195px
				.annotation
					width 380px
			.video-wrapper + .contained .columns
				padding-bottom 75px
