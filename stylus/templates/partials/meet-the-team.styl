/*
* Meet the team
*/

.meet-the-team 
    padding-block 13.5rem
    h2.section-header 
        position relative
        width fit-content
        margin-bottom 7.125rem

        &:after 
            content ''
            position absolute
            background-image url(img/annotations/underline.png)
            background-repeat no-repeat
            width 100%
            bottom -1.5rem
            left 0
            height 1rem

    &__wrapper 
        display flex
        align-items center
        
    &__member-list
        display flex
        flex-direction column
        row-gap 3.75rem
        // flex-grow 1
        width: fit-content
        margin-right: auto
    &__member
        position relative
        cursor pointer

        &::after 
            position absolute
            top -50px
            left -65px
            content url(img/annotations/circle.svg)
            width 100%
            display none
        // background-size cover
        button 
            text-transform uppercase
            cursor pointer
    
        &:hover 
            &::after
                display: block
            
        // &:hover
        //     position absolute
        //     content ""
        //     top 0
        //     left 0
        //     background-image url(img/annotations/circle-4.png)
        //     width 100%
        //     background-repeat no-repeat
        &--all 
            color var(--white)

    .member-profile
        width 100%
        max-width 640px
        position relative
        
        &:nth-child(even)
            // Would use reversed classname which is controlled via ACF true/false but option wasn't appearing in CMS
            // So used this instead but same logic applies
            .member-profile__thumbnail
                img
                    transform rotateY(180deg)

        &__thumbnail
            position relative 
            overflow: hidden 

            .polygon-element
                clip-path polygon(0 30%, 89% 0, 100% 100%, 9% 100%)
                background-color var(--white)
                opacity 0.5
                // z-index -1
                position absolute
                bottom 0
                left 0
                right 0
                width 100%
                height 270px
                z-index 1

            img 
                position relative
                // max-width 417px 
                z-index 2
                // width 100%
                width auto
                max-height 432px
                height 100%
                margin-inline auto
                visibility visible
                opacity 1
            
            .sketch-element 
                background-image url(img/annotations/star1.png)
                background-repeat no-repeat
                height 250px
                width 250px
                position absolute
                right -2rem
                top 0
        
        &__overview
            header
                display flex
                align-items center
                column-gap 1rem
                margin-top 3.25rem
                margin-bottom 1.25rem
                text-transform: uppercase

                h4 
                    margin-bottom 0

                span 
                    font-size: 1.5rem
            
            .social-links 
                display flex
                align-items center
                gap 1.875rem
                margin-top 3.75rem
                position relative
            
                .decorative-arrow 
                    position absolute
                    top 50%
                    left -60%
                    transform translateY(-50%)
                    width 50%
        

    .member-profile.hidden 
        height 0
        
        &:nth-child(even) 
            .member-profile__thumbnail
                img 
                    transform rotateX(180deg)

        .member-profile__thumbnail
            img 
                // visibility hidden
                // opacity 0
                height 0
                
            
        .member-profile__overview 
            visibility hidden

            header 
                animation: fadeOutElement 0.2s ease
            
            .social-links
                display none
    
    .member-profile.animate
        &:nth-child(even)
            .member-profile__thumbnail
                .sketch-element
                    top -2rem
                    left 0
                    transform scaleX(-1)
                    transition all 1s linear

        .member-profile__thumbnail
            img 
                animation: moveImageUp 0.2s ease

        .member-profile__overview
            header,
            p 
                animation: fadeInElement 0.3s ease


/* ================
*
* MEDIA QUERIES
*
================ */

@media (max-width: $tablet) 
    .meet-the-team 
        padding-block 8.25rem

        &__wrapper 
            flex-direction column

        &__member-list
            row-gap 1rem
        
        &__member 
            &--active 
                font-weight 700
            
            &:hover
                &::after 
                    display none

    .member-profile 
        max-width: 480px

        &__thumbnail
            img 
                max-height: 350px !important

        &__overview 
            header 
                flex-direction column
                row-gap 1rem
                align-items flex-start !important





/* ================
*
* KEYFRAMES
*
================ */

@keyframes moveImageUp 
    0%
        transform translateY(100%)
    
    80% 
        transform translateY(-5%)
    
    100%
        transform translateY(0%)

@keyframes fadeInElement
    0%
        opacity 0
    
    100% 
        opacity 1

@keyframes fadeOutElement
    0%
        opacity 1
    
    100% 
        opacity 0


@keyframes flipElementY
    0%
        transform scaleX(1)
    
    100%
        transform scaleX(-1)

