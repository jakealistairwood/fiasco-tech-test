/*
* Meet the team
*/

.meet-the-team 
    padding-block 13.5rem;
    h2 
        position relative
        width fit-content
        margin-bottom 4rem

        &:after 
            content ''
            position absolute
            background-image url(img/annotations/underline.png)
            background-repeat no-repeat
            width 100%
            bottom -1rem
            left 0
            height 10px

    &__wrapper 
        display flex
        
    &__members
        display flex
        flex-direction column
        row-gap 3.75rem
        flex-grow 1
    &__member
        button 
            text-transform uppercase
        &--active 
            position relative
            &::after
                position absolute
                content ""
                top 0
                left 0
                background-image url(img/annotations/circle-4.png)
                width 100%
                background-repeat no-repeat
        &--all 
            color var(--white)

    &__member-profile 
        width 100%
        max-width 640px
        top -10rem
        position relative

        
    &__profile-img 
        position relative

        .decor-element
            clip-path polygon(0 30%, 89% 0, 100% 100%, 9% 100%)
            background-color var(--white)
            opacity 0.5
            // z-index -1
            position absolute
            bottom 0
            left 0
            right 0
            width 100%
            height 270px
            z-index 1

        img 
            position relative
            max-width 417px 
            z-index 2
            width 100%
            margin-inline auto

    &__profile-overview
        header
            display flex
            align-items center
            column-gap 1rem
            margin-top 3.25rem

            h4 
                text-transform uppercase
                margin-bottom 0