/*
 * Quick links
 */


.quick-links
	li
		opacity(0)
		transform(translateY(50px))
		transition(opacity 0.5s cubic-bezier(0.7, -0.4, 0.4, 1.4), transform 0.5s cubic-bezier(0.7, -0.4, 0.4, 1.4) )
	&.in-view
		li
			opacity(1)
			transform(translateY(0))
			transition(opacity 0.5s cubic-bezier(0.7, -0.4, 0.4, 1.4), transform 0.5s cubic-bezier(0.7, -0.4, 0.4, 1.4) )
			delay = 0s
			for num in (1..20)
				&:nth-child({num})
					transition-delay delay
				delay = delay + 0.1s

.list
	opacity(0)
	top 10px
.lists.in-view
	.list
		top 0
		opacity(1)
		transition(all 0.5s cubic-bezier(0.7, -0.4, 0.4, 1.4) )
		delay = 0s
		for num in (1..35)
			&:nth-child({num})
				transition-delay delay
			delay = delay + 0.1s
		
 
.quick-links
	margin-top 12vw
	margin-bottom 12vw
	header
		text-align center
		margin-bottom 50px
		.section-title
			margin-bottom 0
	.section-title
		text-align center
		margin-bottom 0
	.quick-links__list
		li
			font-size 1rem
			line-height 1.125rem
			letter-spacing -0.04em
			margin-bottom 15px
			background-image none
			padding-left 0
			> a
				border 0.03125rem solid var(--darkgreen)
				padding 7px 18px 7px 16px
				padding 0.5em 1em
				flex_box()
				align_items(center)
				justify_content(space-between)
				.quick-link__illustration
					flex_shrink(0)
				&:hover
					background-color var(--yellow)
					border-color var(--yellow)
					transition(all 0.5s ease)
					transform(rotate(0.5deg))
					padding-right 1.5em
					.quick-link__illustration
						background-color var(--darkgreen)
			.quick-link__title
				padding-right 10px
			.quick-link__illustration
				width 41px
				height 41px
				flex_box()
				align_items(center)
				justify_content(center)
				border-radius 100px
				background var(--sage)
				svg
					width 17px
			&:last-child
				margin-bottom 0
			@media(min-width: $laptop)
				font-size 1.5rem
				line-height 2.125rem
				margin-bottom 30px
				> a
					padding 0.5em 1.8em
				.quick-link__illustration
					width 85px
					height 85px
					svg
						width 33px
			@media(min-width: $large-desktop)
				font-size 2rem
	@media (min-width: $laptop)
		header
			margin-bottom 70px
