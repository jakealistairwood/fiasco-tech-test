.section3__backgroundtitle
	position absolute
	left 20px
	top 20px
	color #FAD4B8
	font-weight 600
	font-size 150px
	font-size 15.4vw // flexible viewport sized type
	line-height 1
	z-index -1
	white-space nowrap
	pointer-events none
	@media(min-width: 1440px)
		font-size 300px
		font-size 15.4vw // flexible viewport sized type
		left 40px

.slideshow
	width 100%
	padding 0 40px
	margin 0 0 100px
	@media(min-width: 1024px)
		width 50%
		flex_box()
		align_items(center)
		padding 0
		margin 0
	.swiper-container
		overflow visible
		padding-bottom 3rem
	.swiper-wrapper
		align_items(center)
	.swiper-pagination
		@media(max-width: 767px)
			display none
		@media(min-width: 768px)
			bottom 20px !important
	.swiper-button-next
		@media(min-width: 768px)
			left 300px
	.content-wrapper
		width 100%
	ul
		margin 0
		padding 0
		li
			list-style none
			img
				width 100%
				height auto



.section4
	background url('img/blue-triangles.svg') no-repeat center center #CCDFDE
	background-size cover
	width 100%
	overflow hidden
	@media(min-width:768px)
		flex_box()
		min-height 100vh

.section4__content
	clearfix()
	min-height 50vw
	padding 80px 40px 20px
	width 100%
	flex_box()
	flex_direction(column)
	justify_content(center)
	p
		max-width 570px
	@media(min-width:768px)
		width 50%
		padding 80px
	@media(min-width:1240px)
		padding 10vw
	@media(min-width:1640px)
		width 40%
		&.location__slider_content
			width 50%

.section4__tiles
	width 100%
	text-align center
	flex_box()
	flex_direction(row)
	align_content(center)
	padding 40px 40px 80px
	@media(min-width:768px)
		width 50%
		padding 0
		margin 80px 0
	@media(min-width:1024px)
		margin 150px 0
	@media(min-width:1640px)
		width 60%

.section4__tile
	background #fff
	border-radius(8px)
	width calc(33.333% + 15px)
	overflow hidden
	float left
	img
		margin 0
	p
		margin 0
		font-weight 600
		padding 0.6rem 1.5rem
		text-align left
	&:nth-child(1)
		align-self flex-start
	&:nth-child(2)
		margin-top auto
		margin-bottom auto
		margin-left -30px
		margin-right -30px
	&:nth-child(3)
		margin-top 4rem
		align-self flex-end
	@media(min-width:768px)
		width 43%
		&:nth-child(2)
			margin-left -80px
			margin-right -80px
	@media(min-width:1024px)
		width 33%

.section4__image
	background url('img/looking-in-mirror.png') no-repeat center center #CCDFDE
	background-size cover
	width 100%
	padding-bottom 100%


.location__slider
	width 100%
	//overflow hidden
	@media(min-width:768px)
		flex_box()
		flex_direction(row)
		align_items(center)
		justify_content(center)
		width 50%
	.swiper-container
		width 100%
		overflow visible
		padding 50px 0
		margin-bottom 50px
		@media(min-width: 768px)
			padding 100px 0
			margin-bottom 0
	.swiper-wrapper
		overflow visible
	.swiper-button-next,
	.swiper-button-prev
		width 43px
		height 43px
		top 50%
		margin-top -21px
		background-color var(--white)
		border-radius(50%)
		background-size 50% 50%
	.swiper-button-prev
		left 1rem
		@media(min-width: 768px)
			left 1.5rem
	.swiper-button-next
		right 1rem
		@media(min-width: 768px)
			right 1.5rem
	.swiper-slide
		width 330px
		background-color var(--white)
		border-radius(8px)
		overflow hidden
		pointer-events none
		&:after
			content ""
			width 100%
			height 100%
			pointer-events none
			background-color rgba(0,0,0,0.4)
			position absolute
			top 0
			left 0
			z-index 1
			border-radius(8px)
			transition(background-color 0.5s)
		&.swiper-slide-next,
		&.swiper-slide-prev
			&:after
				background-color rgba(0,0,0,0.15)
		&.swiper-slide-active
			pointer-events all
			&:after
				background-color rgba(0,0,0,0)
	p
		padding 0.5rem 1rem
		margin 0
	.location_tile__image
		width 100%
		height 0
		padding-top 140%
		position relative
		overflow hidden
		> img
			width 100%
			height 100%
			position absolute
			top 0
			left 0
			object-fit cover


.section5
	background-color $cream
	margin-bottom 10vw

.section5__content
	padding 80px 40px 40px
	padding-bottom 0
	text-align center
	h2,p
		text-align center
		max-width 650px
		margin-left auto
		margin-right auto
	@media(min-width:768px)
		padding 80px 80px 0 80px
	@media(min-width:1024px)
		padding 150px 80px 0 80px

.section5__icons
	width calc(100% - 40px)
	max-width 1120px
	text-align center
	margin 0 auto
	flex_box()
	flex-wrap wrap
	flex_direction(row)
	align_content(center)
	justify_content(space-between)
	p
		font-weight 500
		font-size 18px
		letter-spacing 0.2rem

.section5__icon
	width 50%
	overflow hidden
	margin 2rem 0
	img
		margin 0
	p
		font-size 0.8rem
		margin 1.5rem 0 0 0
		padding 0.6rem 1.5rem
	@media(min-width:600px)
		width 33%

.section5__circle
	background #FDEADC
	font-family var(--iconFont)
	text-align center
	border-radius(50%)
	width 60px
	height 60px
	line-height 55px
	margin 0 auto
	font-size 40px
	&:before
		content '1'
		display inline
		line-height 0
		color $lightgreen
	@media(min-width:768px)
		width 90px
		height 90px
		line-height 85px
		font-size 60px
	&.two
		&:before
			content '2'
			color $orange
	&.three
		&:before
			content '3'
	&.four
		&:before
			content '5'
			color $orange
	&.five
		&:before
			content '4'
	&.six
		&:before
			content '6'
			padding-left 0.05em
			color $orange



.section6
	max-width 1120px
	text-align center
	margin 0 auto 10vw auto
	background url('img/peach-bg.svg') no-repeat center center $cream
	background-size cover
	border-radius(8px)
	width calc(100% - 60px)
	// margin-left 30px
	// margin-right 30px

.section6__content
	text-align center
	max-width 690px
	margin 0 auto
	width calc(100% - 40px)
	ul
		margin 0
		padding 0
		flex_box()
		align_items(center)
		justify_content(center)
		flex_wrap(nowrap)
		li
			list-style none
			padding 0
			margin 0
			width auto
			margin 1rem 0.5rem
	button
		appearance(none)
		background none
		border none
		border-bottom 2px solid transparent
		box-shadow none
		outline none
		font-family var(--headingFont)
		font-weight 600
		color var(--white)
		padding 0.25rem 0
		margin 1rem
		&:focus
			outline none
		&.active
			border-color var(--white)

.section6__title
	padding 40px
	padding-bottom 0
	h2,p
		text-align center
		max-width 650px
		margin-left auto
		margin-right auto
	@media(min-width:768px)
		padding 80px 80px 0 80px

.section6__form
	margin-bottom 40px
	padding-bottom 40px
	@media(min-width:768px)
		margin-bottom 80px
		padding-bottom 80px

