.section1
	width 100%
	position relative

.section1__content
	clearfix()
	background url('img/pattern-one-green.svg') no-repeat center center #99BFBE
	background-size: 100% 100%;
	background-size cover
	min-height 50vw
	padding 150px 40px 40px 40px
	flex_box()
	flex_direction(column)
	justify_content(center)
	h1
		max-width 600px
	p
		max-width 600px
	.button
		margin-right 1rem

	@media(max-width:767px)
		h1,p
			max-width 500px
	@media(min-width:1024px)
		width 55%
		min-height 90vh
		padding 150px 100px 80px 80px
	@media(min-width:1240px)
		padding 10vw

.section1__wrapper
	width 100%
	height 70%
	max-height 100%
	overflow hidden
	box-shadow(0px 20px 40px rgba(79, 79, 79, 0.25));
	@media(min-width:1024px)
		position absolute
		right 0
		top 50%
		width 50%
		transform(translateY(-50%))

.section1__image
	width 100%
	height auto
	min-height 100%
	object-fit cover
	box-shadow(0px 20px 40px rgba(79, 79, 79, 0.25));
	



.section2
	@media(min-width:1024px)
		flex_box()

.section2__content
	clearfix()
	min-height 50vw
	padding 100px 40px 0px 40px
	p
		max-width 570px
	@media(min-width:1024px)
		width 50%
		padding 80px 0 80px 80px
		flex_box()
		flex_direction(column)
		justify_content(center)
	@media(min-width:1240px)
		padding 10vw 3vw 10vw 10vw

.section2__image
	width auto
	height auto
	max-height 80vh
	margin 50px 50px 80px
	@media(min-width:768px)
		margin 80px
	@media(min-width:1240px)
		margin 150px 80px
	@media(min-width:1600px)
		margin 150px



.section3
	//flex_box()
	background url('img/light-bg.svg') no-repeat center center #F6AA72
	background-size(cover)
	max-width 100vw
	overflow-x hidden
	position relative
	box-sizing content-box
	@media(min-width:1024px)
		flex_box()
		min-height 100vh
	@media(min-width:1240px)
		padding-top 150px

.section3__content
	clearfix()
	//min-height 50vw
	width 80%
	padding 80px 40px 50px
	z-index 1
	h2,p
		max-width 400px
	@media(min-width:600px)
		padding 200px 40px 50px
	@media(min-width:768px)
		width 50%
	@media(min-width:1024px)
		padding 80px
		flex_box()
		flex_direction(column)
		justify_content(center)
		align_items(flex-start)
	@media(min-width:1240px)
		padding 10vw

