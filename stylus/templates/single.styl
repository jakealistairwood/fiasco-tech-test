//========================================================

// SINGLE PAGE STYLES

//========================================================
.single
	@media(min-width: $tablet)
		.text-only-2-columns .contained .column-right
			width 50%
			padding-left 20px
		.text-only-2-columns .contained .column-left
			padding-right 20px
	@media(min-width: $desktop)
		.text-only-2-columns .contained .column-right
			padding-left 40px
		.text-only-2-columns .contained .column-left
			padding-right 40px
		h2
			font-size 2rem
	.site-main
		padding-top 130px
		@media(min-width:$tablet)
			padding-top 160px
		@media(min-width: $desktop)
			padding-top 230px
		@media(min-width:$large-desktop)
			padding-top 260px

.single,
.page-template-default
	.site-main
		.block
			p,blockquote
				max-width 825px
				margin-left auto
				margin-right auto
			// blockquote
			// 	margin-top 0
			&.dark-background
				background var(--darkgreen)
				color var(--pink)
				blockquote
					&::before
						background-image url(img/quote-pink.svg)
				a.cta, .cta
					background-color var(--pink)

.no-content
	padding 10vw 0

