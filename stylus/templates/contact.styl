body.page-contact
    background var(--pink)
    padding 130px 0
    .site-main
        position relative
        .annotation
            &-1
                position absolute
                left 0
                top 0
                width 80px
    h1
        margin-top 60px
        span
            position relative
            display inline-block
            &::after
                content ""
                display inline-block
                position relative
                bottom - $margin
                right -50%
                width 100%
                height 60px
                background-image url(img/annotations/hero-underline.png)
                background-size contain
                background-repeat no-repeat
        + .cta
            margin 40px 0 25px
            display none
    .contact-form-wrapper
        .columns .column-right .success-msg
            position relative
            display none
            padding 0 10px
            max-width 340px
            &::after
                content ""
                display block
                width calc(100% + 20px)
                height 20px
                margin 15px -10px 0
                background-image url(img/annotations/underline.png)
                background-repeat no-repeat
                background-size contain
                background-position center
                z-index 1
                
        &.message-sent
            h1 span::after,
            .contact-form
                display none
            h1 + .cta
                display inline-block
            .columns .column-right .success-msg
                display block
        input[type="submit"],
        .wpcf7-form-control
            border-radius 0
        .wpcf7-form-control
            &:not(input[type="submit"])
                padding-left 0
                box-shadow none
                background transparent
                border-bottom 2px solid var(--darkgreen)
        textarea.wpcf7-form-control
            padding-left 20px !important
            border 2px solid var(--darkgreen)
        .wpcf7-form p
            &:nth-child(6)
                margin-top 30px
                span.form-label
                    display inline-block
                    margin-bottom 15px
            &:nth-child(7)
                text-align right
                span.ajax-loader
                    display none
    @media (min-width: $tablet)
        .contact-form-wrapper
            .columns
                flex_direction(row)
                align_items(center)
                .column
                    width 50%
                    &:first-child
                        margin-bottom 0
            .wpcf7-form
                flex_box()
                flex_wrap(wrap)
                justify_content(space-between)
                p
                    width calc(50% - 15px)
                    &:nth-child(6),
                    &:nth-child(7)
                        width 100%
    @media (min-width: $desktop)
        padding-top 250px
        .contact-form-wrapper
            .columns .column-right .success-msg
                max-width none
                p
                    font-size 2.25rem
                    line-height 2.5rem
    @media (min-width: $large-desktop)
        padding-top 350px
        .contact-form-wrapper
            .columns .column-right .success-msg
                max-width none
                p
                    font-size 2.25rem
                    line-height 2.5rem
    .follow-us
        margin-top 80px
        margin-bottom 80px
        .columns
            align_items(center)
        .social-links
            flex_box()
            flex_direction(column)
            li
                width 180px
                margin-bottom 15px
                &:last-child
                    margin-bottom 0
                a
                    width 100%
        @media (min-width: $tablet)
            .column
                width auto
            .social-links
                flex_direction(row)
                li
                    margin 0 15px 0 0
                    a.cta
                        padding-left 1.5rem
                        padding-right 1.5rem
                    &:last-child
                        margin-right 0
        @media (min-width: $laptop)
            margin-top 180px
            margin-bottom 180px
            .column
                &.column-left
                    position relative
                    h2
                        margin-bottom 0
                    &::before
                        content ""
                        display block
                        position absolute
                        left -200px
                        top -65px
                        bottom -65px
                        width calc(100% + 60px)
                        height calc(100% + 130px)
                        background-image url(img/annotations/circle-2.png)
                        background-repeat no-repeat
                        background-size contain
                        background-position center
                        z-index 1
                        pointer-events none
        @media (min-width: $desktop)
            .column.column-left::before
                left -400px
                top -100px
                bottom -100px
                width calc(100% + 180px)
                height calc(100% + 200px)
        @media (min-width: $large-desktop)
            margin-top 280px
            margin-bottom 280px
            .column.column-left::before
                left -270px
                top -185px
                bottom -225px
                width 650px
                height 450px
