/*
* Buttons
*
*/

*::-webkit-media-controls-panel
	display none!important
	-webkit-appearance none
	-moz-appearance none

*::--webkit-media-controls-play-button
	display none!important
	-webkit-appearance none
	-moz-appearance none

*::-webkit-media-controls-start-playback-button
	display none!important
	-webkit-appearance none
	-moz-appearance none

button
	-webkit-appearance none
	-moz-appearance none
	background 0
	padding 0
	border 0
	outline 0
	cursor pointer
	border-radius 0

input[type='button'],
input[type='submit'],
button[type='submit'],
div.wpforms-container-full .wpforms-form button[type=submit]
	display inline-block
	cursor pointer
	outline none
	color #fff
	background-color $red
	font-family var(--headingFont)
	font-weight 500
	text-align center
	font-size 1rem
	width auto
	text-decoration none
	padding var(--button-padding)
	text-transform uppercase
	border none
	letter-spacing 0.03em
	transition background-color 0.25s, color 0.25s
	box-shadow(none)
	border-radius(0)
	&:hover
		background-color $red
		color var(--white) !important
		transition: background-color 0.25s, color 0.25s
	&.disabled,
	&:disabled
		opacity(0.5)
		pointer-events none
	&.white
		background-color var(--white)
		color var(--darkgreen)
		&:hover
			color var(--white)
			background-color var(--button-bg)


//
// LINK
//
.link
	inline_flex()
	position relative
	font-family var(--headingFont)
	text-transform uppercase
	text-align center
	font-size inherit
	padding 0
	&::after
		content ''
		display block
		position absolute
		bottom -0.4em
		left 0
		width 100%
		height 4px
		background transparent
	&.darkgreen
		color var(--darkgreen)
		&::after
			background var(--black)
	&.pink
		color var(--pink)
		&::after
			background var(--pink)


//
// BUTTON
//
a.button,
.button
	display inline-block
	color var(--green)
	font-family var(--headingFont)
	text-transform uppercase
	border-bottom 5px solid var(--green)
	font-size 0.9em
	// padding var(--button-padding)

a.button--large
	padding 0.2em 2rem
	@media(min-width:$tablet)
		font-size 1.5rem
	@media(min-width:$desktop)
		padding 0.4em 2em
		font-size 2.2rem

.button-outline
	display inline-block
	cursor pointer
	outline none
	background-color transparent
	font-family var(--headingFont)
	text-transform uppercase
	color var(--darkgreen)
	font-weight 500
	text-align center
	font-size 14px
	width auto
	text-decoration none
	padding var(--button-padding)
	box-shadow( inset 0px 0px 0px 2px var(--darkgreen) )
	transition(all 0.5s ease)
	&:hover
		background-color var(--sage)
		transition(all 0.5s ease)
		box-shadow(inset 0px 0px 0px 2px transparent)
	// @media(min-width:$tablet)
	// 	font-size 16px



//
// CTA
//
a.cta,
.cta
	display inline-block
	background var(--green)
	color inherit
	font-size 0.9rem
	line-height 1.6em
	font-family var(--headingFont)
	text-align center
	text-transform uppercase
	padding 1.025rem 2.5875rem
	&.darkgreen
		color #fff
		background var(--darkgreen)
	&.yellow
		color var(--darkgreen)
		background var(--yellow)
	&.pink
		color var(--darkgreen)
		background var(--pink)
	@media(min-width:$desktop)
		font-size 1.125rem


//
// EXPAND
//
.expand
	display inline-block
	inline_flex()
	align_items(center)
	background-color transparent
	font-family var(--textFont)
	font-weight 500
	text-align center
	font-size 14px
	width auto
	text-decoration none
	padding 0.6rem 0
	border-radius(4px)
	&.expand--plus,
	&.expand--minus
		text-transform uppercase
		letter-spacing 0.05em
		&:hover
			&:before
				transition(all 0.5s ease)
				transform(scale(1.1))
		&:before
			transition(all 0.5s ease)
			transform(scale(1))
			content '+'
			display inline-block
			height 0.6em
			width 0.6em
			color #fff
			font-family var(--iconFont)
			background var(--darkgreen)
			border-radius(50%)
			margin-right 0.3em
			font-size 2.3em
			line-height 0.5em
			letter-spacing 0
			text-align center
	&.expand--minus
		&:before
			color #ccdfde
			transform(rotate(45deg))
	&.expand--close
		&:before
			content 'x'
			text-transform none
			color var(--mint)
	&.expand--white
		&:before
			background #ccdfde
			color var(--darkgreen)

