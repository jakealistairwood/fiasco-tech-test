.grecaptcha-badge
	display none !important


.custom-select-wrapper
	position: relative;
	user-select: none;
	width: 100%;
	max-width 420px

.custom-select
	position: relative
	display: flex
	flex-direction: column
	&.open
		.custom-options
			opacity: 1;
			visibility: visible;
			pointer-events: all;
		.custom-select__trigger
			border-radius 8px 8px 0 0

.custom-select__trigger
	position: relative
	display: flex
	align-items: center
	justify-content: space-between
	// font-size: 20px
	color: #55575B
	height: auto
	line-height: 60px
	background: #ffffff
	cursor: pointer
	border-radius(8px)
	padding 0 1rem
	.arrow
		transform(rotate(-180deg))
	@media(min-width:1024px)
		padding 0 1.4rem


.custom-options
	position: absolute;
	display: block;
	top: 100%;
	left: 0;
	right: 0;
	background: #fff;
	transition: all 0.5s;
	opacity: 0;
	visibility: hidden;
	pointer-events: none;
	z-index: 2;
	padding-bottom 1em
	border-radius 0 0 8px 8px


.custom-option
	position relative
	display block
	padding 0 1rem
	font-size 1.2em
	font-weight 600
	line-height 60px
	cursor pointer
	color var(--green)
	transition all 0.5s
	&:before
		content '- '
		display inline
	@media(min-width:1024px)
		font-size 1.3em
		padding 0.5rem 1.4rem

.custom-option:hover
	cursor pointer
	background-color #CCDFDE 

.custom-option.selected
	background-color #99BFBE


.arrow {
	 position: relative;
	 height: 15px;
	 width: 15px;
}
 .arrow::before, .arrow::after {
	 content: "";
	 position: absolute;
	 bottom: 0px;
	 width: 0.15rem;
	 height: 100%;
	 transition: all 0.5s;
}
 .arrow::before {
	 left: -5px;
	 transform: rotate(45deg);
	 background-color: #394a6d;
}
 .arrow::after {
	 left: 5px;
	 transform: rotate(-45deg);
	 background-color: #394a6d;
}
 .open .arrow::before {
	 left: -5px;
	 transform: rotate(-45deg);
}
 .open .arrow::after {
	 left: 5px;
	 transform: rotate(45deg);
}




label,
.label
	font-family var(--textFont)
	text-transform none
	font-weight 400
	color inherit

.wpforms-container input,
input
	&.show
		display inline-block !important
	&[type='button']
		width 100%
		max-width 300px
		appearance(none)
	&[type='submit']
		width auto
		min-width 120px
		appearance(none)
	&[type='text'],
	&[type='email'],
	&[type='search'],
	&[type='number'],
	&[type='tel'],
	&[type='password']
		appearance(none)
		border-radius(0)
		border none
		border-bottom 2px solid var(--text-color)
		text-align left
		width 100%
		background transparent
		outline none
		height 50px
		font-weight 400
		font-family var(--textFont)
		line-height 50px
		padding 0
		margin 0
		color var(--text-color)
		letter-spacing -0.04em
		transition(all 0.25s)
		box-shadow(none)
	&[type='checkbox'],
	&[type='radio']
		appearance(none)
		width 1.5em
		height 1.5em
		display inline-block !important
		margin-left 0
		background-color transparent
		border 1px solid var(--darkgreen)
		box-shadow(none)
		outline none
		margin-right 0.5em
		vertical-align middle
		position relative
		cursor pointer
		@media(min-width:$desktop)
			width 2em
			height 2em
			margin-right 1em
		&:checked
			border-color var(--darkgreen)
			&:after
				display block
				width calc(100% - 2px)
				height calc(100% - 2px)
				content ""
				background-color var(--darkgreen)
				background-size(contain)
				background-position center center
				border-radius(100%)
				vertical-align middle
				position absolute
				top 1px
				left 1px
			~.sf-label-checkbox
				color var(--text-color)
	&[type='checkbox']
		&:checked
			&:after
				background-image url('./img/check-mark.svg')
				background-color transparent
	&[type='radio']
		border-radius(100%)
	&:focus
		border-color var(--dark-grey)
		transition(all 0.25s)
	&.not-empty
		border-color var(--green)
		transition(all 0.25s)
	&.empty
		border-color $red
		transition(all 0.25s)

textarea
	appearance(none)
	border 2px solid var(--darkgreen)
	text-align left
	width 100%
	background transparent
	outline none
	color var(--darkgreen)
	height 240px
	font-weight 400
	font-family var(--textFont)
	line-height 1.25em
	padding 20px 20px
	margin 0
	border-radius(0)
	&:focus
		border-color var(--dark-grey)
		transition(all 0.25s)
	&.not-empty
		border-color var(--green)
		transition(all 0.25s)
	&.empty
		border-color $red
		transition(all 0.25s)

select
	display inline-block
	font-family var(--textFont)
	appearance(none)
	border 1px solid var(--light-grey)
	width 100%
	outline none
	font-size inherit
	color var(--dark-grey)
	height auto
	font-weight 400
	font-family var(--textFont)
	line-height 60px
	padding 0 30px
	margin 0
	transition(all 0.25s)
	border-radius(0)
	box-shadow(none)
	cursor pointer

select::-ms-expand
	display none





*::-webkit-input-placeholder
	color var(--darkgreen)
	font-size inherit
*input:-moz-placeholder
	color var(--darkgreen) !important
	font-size inherit
input::-webkit-input-placeholder
	color var(--darkgreen)
	font-size inherit
input:-moz-placeholder
	color var(--darkgreen)
	font-size inherit








//
//
// WPFORMS
//
//	
div.wpforms-container
	
	::-webkit-input-placeholder
		color var(--text-color)
		opacity(1)
	:-moz-placeholder
		color var(--text-color)
		opacity(1)
	::-moz-placeholder
		color var(--text-color)
		opacity(1)
	:-ms-input-placeholder
		color var(--text-color)
		opacity(1)
	::-ms-input-placeholder
		color var(--text-color)
		opacity(1)
	
	.wpforms-field-radio
		li
			margin-bottom 1rem
	
	.wpforms-submit
		background var(--darkgreen) !important
		color var(--pink)
	
	.wpforms-field-label
		font-weight 100
		letter-spacing -0.04em
	
	.wpforms-field-textarea
		margin-top 2em
		padding-top 2em
		clear both
	
	.wpforms-submit-container
		text-align right
		margin-left auto
	
	textarea
		margin-top 1em
	
	input
		&[type='checkbox'],
		&[type='radio']
			border-width 2px
			@media(min-width:$desktop)
				width 1.5em
				height 1.5em
				margin-top 0
				vertical-align middle
				margin-right 1em
		&[type='radio']
			@media(min-width:$desktop)
				&:checked
					&:after
						left 2px
						top 2px
						width calc(100% - 4px)
						height calc(100% - 4px)
	
	.wpforms-required-label,
	label.wpforms-error
		color var(--darkgreen)
	label.wpforms-error
		padding-top 0.5em
	.wpforms-field input.wpforms-error, 
	.wpforms-field input.user-invalid, 
	.wpforms-field select.wpforms-error, 
	.wpforms-field select.user-invalid, 
	.wpforms-field.wpforms-has-error .choices__inner
		border-top 0
		border-left 0
		border-right 0
		border-color var(--white)
		border-width 2px
	.wpforms-field textarea.wpforms-error, 
	.wpforms-field textarea.user-invalid
		border-color var(--white)
		border-width 2px
	
	input[type="number"]::-webkit-outer-spin-button, 
	input[type="number"]::-webkit-inner-spin-button
		-webkit-appearance none
		margin 0
	input[type="number"]
		-moz-appearance textfield

	.wpforms-confirmation-container
		position relative
		padding 0 10px
		max-width 340px
		margin-left auto
		&::after
			content ""
			display block
			width calc(100% + 20px)
			height 20px
			margin 15px -10px 0
			background-image url(img/annotations/underline.png)
			background-repeat no-repeat
			background-size contain
			background-position center
			z-index 1

div.wpforms-container-full
	.wpforms-form
		.wpforms-field-label
			display none !important
			position absolute
			top 50%
			left 0
			width 100%
			color $peach
			// text-transform uppercase
			letter-spacing 0.05em
			font-weight 400 !important
			z-index 2
			padding 0.8rem 1rem !important
			transform-origin 0 0
			pointer-events none
			transform(translateY(-50%))
		.wpforms-field-label-inline
			font-weight 300 !important
			font-size 12px !important
			line-height 14px !important
			vertical-align middle !important
		.wpforms-submit-container
			text-align right
			width 150px
			position absolute
			bottom 0
			right 0
			margin-left auto
		input[type=submit],
		button[type=submit],
		.wpforms-page-button
			display inline-block
			cursor pointer
			outline none
			color #fff !important
			background-color var(--black) 
			font-family var(--headingFont)
			font-weight 500
			text-align center
			font-size 1rem !important
			width auto
			text-decoration none
			padding 0.6rem 1.6rem !important
			border none !important
			letter-spacing 0.03em
			transition: background-color 0.25s, color 0.25s !important
			box-shadow(none)
			border-radius(8px)
			&:hover
				background-color var(--green) !important
				color var(--white) !important
		.wpforms-submit-spinner
			display none !important


.wpforms-confirmation-container-full,
div[submit-success]>.wpforms-confirmation-container-full:not(.wpforms-redirection-message)
	background-color transparent !important
	border none !important
	color var(--white) !important


// NEWSLETTER FORM
.newsletter-overlay
	.form-fields-row
		margin-bottom 26px
		.form-fields-column--right
			margin-top 20px
		@media(min-width:$tablet)
			flex_box()
			justify_content(space-between)
			.form-fields-column
				width calc(50% - 20px)
				&--right
					flex_box()
					flex_direction(column)
					justify_content(space-between)
					margin-top 0
		@media(min-width:$laptop)
			.form-fields-column
				width calc(50% - 50px)
				
	.form-field
		input[type="text"],
		input[type="email"]
			font-size 1.8rem
			background transparent
			color var(--black)
			border 0
			padding 0
			margin 0
			border-bottom 2px solid var(--black)
		input[type="submit"]
			display inline-block
			background var(--black)
			color var(--pink)
			border 0
			border-radius 0
		&.form-field-firstname input,
		&.form-field-lastname input
			margin-bottom 1rem
