.searchform
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	background var(--darkgreen)
	color var(--sand)
	padding var(--hpad)
	z-index 11
	visibility hidden
	pointer-events none
	transform( translateY(-100%) )
	transition(transform 400ms ease-in-out, visibility 0.4s 1s ease-in-out)
	input[type="text"]
		font-family var(--headingFont)
		text-transform uppercase
		font-size 36px
		border-color var(--sand)
		color var(--sand)
		letter-spacing 0
		@media(min-width $tablet)
			border-bottom 0
			color var(--darkgreen)
		@media(min-width $laptop)
			font-size 72px
			height 70px
	
	@media(max-width ($tablet - 1) )
		::-webkit-input-placeholder
			color: rgba(245, 235, 224, 0.5)
		::-moz-placeholder
			color: rgba(245, 235, 224, 0.5)
		:-ms-input-placeholder
		 	color: rgba(245, 235, 224, 0.5)
		:-moz-placeholder
			color: rgba(245, 235, 224, 0.5)
	
	@media(min-width $tablet)
		position absolute
		background var(--white)
		color var(--darkgreen)
		left calc( var(--hpad) * -1 )
		right calc( var(--hpad) * -1 )
		bottom auto
		padding 80px var(--hpad) 40px var(--hpad)
		border-bottom 2px solid var(--darkgreen)
		z-index 2
		::-webkit-input-placeholder
			color: var(--sage)
		::-moz-placeholder
			color: var(--sage)
		:-ms-input-placeholder
		 	color: var(--sage)
		:-moz-placeholder
			color: var(--sage)

body.searchform--open
	.searchform
		visibility visible
		pointer-events auto
		transform( translateY(0) )
		transition(transform 400ms ease-in-out)

		
.searchform__button
	@extends .button-outline
	width 100%
	margin-top 1em
	line-height 1.5
	&:after
		content ''
		display inline-block
		width 1.6em
		height 1.6em
		background-image: url("data:image/svg+xml,%3Csvg width='23' height='22' viewBox='0 0 23 22' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle cx='9.50021' cy='8.99997' r='7.99997' stroke='%23003333' stroke-width='2'/%3E%3Cpath d='M21.4999 21L14.7499 14.25' stroke='%23003333' stroke-width='2'/%3E%3C/svg%3E%0A");
		background-size contain
		background-repeat no-repeat
		margin-left 0.5em
		vertical-align bottom
		// line-height 0
	@media(min-width $tablet)
		box-shadow none
		width auto
		margin-top 0
		margin-left auto
		padding-right 0
		font-size 12px
		&:after
			width 30px
			height 30px
			margin-left 0.8em
			margin-bottom -0.4em
		&:hover
			background transparent
	@media(min-width $large-desktop)
		font-size 14px

.searchform__close
	margin 0 0 0 auto
	width 28px
	height 28px
	cursor pointer			
	&:before,
	&:after
		content ''
		display block
		width 100%
		height 2px
		background-color var(--sand)
		transform-origin 55% 50%
	&:before
		transform(rotate(-45deg))
		margin-top 9px
	&:after
		transform(rotate(45deg))
	@media(min-width $tablet)
		position absolute
		right var(--hpad)
		&:before,
		&:after
			background-color var(--darkgreen)

.searchform__title
	margin-top var(--nav-height)
	color inherit
	font-weight 300
	@media(min-width $tablet)
		margin-top 0
		margin-bottom 1.5em

input[type="submit"].searchform__submit
	width 100%
	color inherit
	box-shadow( inset 0px 0px 0px 2px var(--sand) )
	margin-top 80px
	&:hover
		background var(--sand)
		color var(--darkgreen) !important
	@media(max-width ($tablet - 1) )
		display none
	@media(min-width $tablet)
		margin-top 0px
		display none

.searchform__tooltip
	color #809999
	position absolute
	right var(--hpad)
	bottom 45px
	font-size 16px
	display none
	@media(min-width $tablet)
		display block
	@media(min-width $desktop)
		font-size 20px
	&:after
		content ''
		display inline-block
		width 1.3em
		height 1em
		margin-left 0.5em
		background-image: url("data:image/svg+xml,%3Csvg width='23' height='19' viewBox='0 0 23 19' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1.81836 11.9155H21.8184V1.91553H12.6517M1.81836 11.9155L6.81836 6.91553M1.81836 11.9155L6.81836 16.9155' stroke='%23809999' stroke-width='2' stroke-linecap='square' stroke-linejoin='round'/%3E%3C/svg%3E%0A");
		background-size contain
		background-repeat no-repeat
		vertical-align bottom






.filters
	width 100%
	padding 30px 0 40px 0
	@media(min-width $tablet)
		flex_box()
		flex_direction(row)
		align_items(center)
		flex_wrap(nowrap)
		padding 60px 0
		.searchform__button,
		.filters__button
			flex-shrink 0
	@media(min-width $desktop)
		padding 80px 0

.filters__dropdown
	position relative
	&.filters--open
		.filters__options
			flex_box()
		.filters__trigger
			background #fff
			box-shadow( inset 0px 0px 0px 2px var(--darkgreen) )
			color var(--darkgreen)
			&:after
				background-image: url("data:image/svg+xml,%3Csvg width='12' height='7' viewBox='0 0 12 7' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 0.5H1L6 6.5L11 0.5Z' fill='%23003333'/%3E%3Cpath d='M1 0.5V0C0.805991 0 0.629495 0.11223 0.547205 0.287922C0.464915 0.463615 0.491688 0.67105 0.615889 0.820092L1 0.5ZM11 0.5L11.3841 0.820092C11.5083 0.67105 11.5351 0.463615 11.4528 0.287922C11.3705 0.11223 11.194 0 11 0V0.5ZM6 6.5L5.61589 6.82009C5.71089 6.93409 5.85161 7 6 7C6.14839 7 6.28911 6.93409 6.38411 6.82009L6 6.5ZM1 1H11V0H1V1ZM10.6159 0.179908L5.61589 6.17991L6.38411 6.82009L11.3841 0.820092L10.6159 0.179908ZM6.38411 6.17991L1.38411 0.179908L0.615889 0.820092L5.61589 6.82009L6.38411 6.17991Z' fill='%23003333'/%3E%3C/svg%3E%0A");
				transform( rotate(180deg) )
				transition(transform 0.2s ease-in-out)
			@media(min-width $tablet)
				box-shadow(none)
	@media(min-width $tablet)
		flex_box()
		flex_direction(row)
		flex_wrap(nowrap)
		align_items(center)
		overflow hidden

.filters__options
	display none
	flex_direction(column)
	align_items(center)
	justify_content(flex-start)
	position absolute
	top 100%
	left 0
	right 0
	@media (min-width: $tablet)
		position static
		flex_box()
		flex_direction(row)
		flex_wrap(wrap)
		overflow hidden
		gap 8px 0


.filters__trigger
	display block
	width 100%
	font-family var(--headingFont)
	font-size 14px
	line-height 20px
	text-align center
	padding var(--button-padding)
	text-transform uppercase
	background var(--darkgreen)
	color var(--sand)
	transition(all 0.2s ease)
	&:after
		content ''
		display inline-block
		background-image: url("data:image/svg+xml,%3Csvg width='12' height='7' viewBox='0 0 12 7' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 0.5H1L6 6.5L11 0.5Z' fill='%23FCF9F0'/%3E%3Cpath d='M1 0.5V0C0.805991 0 0.629495 0.11223 0.547205 0.287922C0.464915 0.463615 0.491688 0.67105 0.615889 0.820092L1 0.5ZM11 0.5L11.3841 0.820092C11.5083 0.67105 11.5351 0.463615 11.4528 0.287922C11.3705 0.11223 11.194 0 11 0V0.5ZM6 6.5L5.61589 6.82009C5.71089 6.93409 5.85161 7 6 7C6.14839 7 6.28911 6.93409 6.38411 6.82009L6 6.5ZM1 1H11V0H1V1ZM10.6159 0.179908L5.61589 6.17991L6.38411 6.82009L11.3841 0.820092L10.6159 0.179908ZM6.38411 6.17991L1.38411 0.179908L0.615889 0.820092L5.61589 6.82009L6.38411 6.17991Z' fill='%23FCF9F0'/%3E%3C/svg%3E%0A");
		background-repeat no-repeat
		background-size contain
		width 10px
		height 6px
		margin 4px 0 3px 0.5em
		transform(rotate(0))
		transition(transform 0.2s ease-in-out)
	&:hover,
	&:focus
		color var(--sand)
	@media(min-width $tablet)
		display none
		background transparent
		padding 0
		margin-right 1em
		color var(--darkgreen)
		pointer-events none
		width auto
		font-size 12px
		&:after
			display none

.filters__label
	font-family var(--headingFont)
	display none
	background transparent
	margin-right 1em
	color var(--darkgreen)
	pointer-events none
	width auto
	font-size 12px
	padding var(--button-padding)
	padding-left 0
	padding-right 0
	text-transform uppercase
	@media(min-width $tablet)
		display inline-block
	@media(min-width $large-desktop)
		font-size 14px


.filters__button
	display inline-block
	width 100%
	font-family var(--headingFont)
	color var(--darkgreen)
	font-size 14px
	line-height 20px
	text-align center
	padding 1em 1.6em
	margin 0 0.4em
	background var(--sage)
	text-transform uppercase
	transition(all 0.2s ease)
	&:link,
	&:visited
		color var(--darkgreen)
	&:hover
		background var(--darkgreen)
		color rgba(245, 235, 224, 1)
		transition(all 0.2s ease)
	
	&--active
		background var(--darkgreen)
		color var(--sand) !important
	@media (min-width: $tablet)
		width auto
		padding 0.8em 1.6em
		border 2px solid var(--darkgreen)
		background transparent
		font-size 12px
		&--active
			background var(--darkgreen)
			&:hover
				color var(--darkgreen) !important
		&:hover
			background var(--sage)
			color var(--darkgreen)
			border-color transparent
	@media(min-width $large-desktop)
		font-size 14px
		

.filters__title
	text-transform uppercase
	font-family var(--headingFont)
	margin-right 1.5em

.filters__clear
	margin-top 1em
	a
		width 100%
	@media(min-width $tablet)
		display none

.filters--search
	// HIDE FILTERS WHEN SHOWING SEARCH RESULTS
	@media(min-width $desktop)
		padding-bottom 120px
