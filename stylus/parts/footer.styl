/*
*  Footer
*/

footer
	display block
	width 100%
	background var(--blackgreen)
	color var(--white)
	clear both
	padding 80px 0 2rem 0
	z-index 6
	a
		text-decoration none
	a:link,
	a:visited
		color var(--green)
	p
		color inherit
	@media(min-width:$large-desktop)
		padding 80px 0 0 0
	
	.inline-list
		font-size 0.9rem
		@media(min-width:$large-desktop)
			font-size 1.2rem
	
.column--sponsors
	margin-bottom 2rem

.column--social
	min-width 185px
	@media(max-width:$tablet)
		order -1
		margin-bottom 2rem

.footer__wrapper
	flex_box()
	flex_direction(column)
	@media(min-width:600px)
		flex_box()
		flex_direction(row)
		// flex_wrap(wrap)
		flex_wrap(nowrap)
		justify_content(space-between)
		align_items(flex-start)
		padding-bottom 2rem
		&:last-child
			align_items(center)
	@media(min-width:$desktop)
		&:first-child
			padding-bottom 6rem
	

.footer__content
	margin 0 auto 0 0
	@media(max-width:767px)
		.footer__column
			margin-bottom 2.5rem
	
	@media(max-width: 599px)
		width 80%

	@media(min-width:$tablet)
		flex_box()
		flex_direction()
		align_items(center)
		justify_content(space-between)
		font-size 0.9rem
	
	&.footer__content--last
		flex-wrap wrap
		@media(min-width:$desktop)
			margin-right 50px
			width 255px


.footer__menu
	list-style none
	display inline-block
	padding-left 0
	@media(max-width:$tablet)
		margin-bottom 1.5rem
	li
		margin 0 0 0.6rem 0
		@media(min-width:$tablet)
			margin 0 0 1.5rem 0

.inline-list
	list-style none
	padding-left 0
	li
		padding 0 1rem
		display inline-block
		border-left 1px solid var(--sage)
		margin 0
		font-size inherit
		&:first-child
			padding-left 0
			border-left 0
		a
			color var(--sage)

.site-credit
	color var(--sage)
	display inline-block


.no-touch
	pointer-events none
	cursor auto

.footer__credit
	margin-top 1.5rem
	font-size 14px
	letter-spacing 0
	margin-bottom 0


.social-icons
	a
		display inline-block
		margin 0 0.4em
		width 30px
		height 30px
		line-height 26px
		background #fff
		color var(--black)
		font-family var(--iconFont)
		font-weight 400
		text-align center
		font-size 16px
		border-radius(100%)
		@media(min-width:1024px)
			width 43px
			height 43px
			line-height 40px
			font-size 18px
			margin 0 0.8em
	@media(min-width: 768px)
		p
			margin 0

		
.sponsors
	display block
	padding-left 0
	li
		display inline-block
		margin 0
		&:first-child img
			margin-left 0
	img
		margin-left 20px
		height 40px
		@media(min-width:$laptop)
			height 55px
		@media(min-width:$large-desktop)
			height 66px
		

.icon-list
	display block
	li
		display inline-block
		margin 0 1rem 0 0
		&:last-child
			margin-right 0
		a
			width 2.5rem
			height 2.5rem
			color var(--black)
			background url('img/icon-facebook.svg') no-repeat center center transparent
			background-size contain
			border-radius(50%)
			display inline-block
			text-align center
			text-indent -999px
			overflow hidden
			@media(min-width:$tablet)
				width 3rem
				height 3rem
	.icon-list__twitter
		background-image url('img/icon-twitter.svg')

	.icon-list__instagram
		background-image url('img/icon-instagram.svg')


