#cookie-law-info-bar
	background-color var(--darkgreen) !important
	position fixed
	bottom 0 !important
	left 0
	width 100%
	color #fff !important
	text-align center
	font-size 0.8rem
	font-weight 500
	padding 1rem
	box-shadow(none)
	span
		display block
		position relative
		line-height 1.4em
		max-width 1410px
		margin 0 auto
	.cli_action_button
		line-height 1rem
		margin 1rem 0 0 0 !important
		border-radius(8px)
		background-color var(--white) !important
		text-align center
		vertical-align middle
		color var(--darkgreen) !important
		padding 0.5rem 1.5rem
		&:hover
			background-color $red !important
			color var(--white) !important
		@media(min-width:1296px)
			margin 0 0 0 3rem !important
	@media(min-width:1296px)
		br
			display none
			
	.cli_settings_button
		color #CAB1FD !important
		text-decoration underline
		margin 0 !important
	.cli-plugin-main-link
		font-weight 500 !important

.cli-bar-container
	display block