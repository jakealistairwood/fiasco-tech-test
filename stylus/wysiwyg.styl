//========================================================
//
// Tablet and larger
//
//========================================================

@media (min-width: $laptop)
	.wysiwyg-section
		.wp-caption
			.wp-caption-text
				font-size 0.65em
				line-height 1.3em
		.wp-caption.alignright,
		img.alignright,
		.wp-caption.alignleft,
		img.alignleft
			display inline-block
			float right
			margin 40px 60px
			margin-right -60px
			word-wrap normal
		.wp-caption.alignleft,
		img.alignleft
			margin-right 60px
			margin-left -60px



