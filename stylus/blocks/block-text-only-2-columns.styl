/*
* TEXT ONLY 2 COLUMNS BLOCK STYLING
*
*/

.text-only-2-columns
	.contained div
		opacity(0)
		transform(translateY(50px))
		transition(opacity 0.5s cubic-bezier(0.7, -0.4, 0.4, 1.4), transform 0.5s cubic-bezier(0.7, -0.4, 0.4, 1.4) )
	&.in-view
		.contained div
			opacity(1)
			transform( translateY(0) )
			transition(opacity 0.5s cubic-bezier(0.7, -0.4, 0.4, 1.4), transform 0.5s cubic-bezier(0.7, -0.4, 0.4, 1.4) )
			delay = 0s
			for num in (1..10)
				&:nth-child({num})
					transition-delay delay
				delay = delay + 0.1s

.text-only-2-columns
	.text-column
		max-width 600px
		@media(min-width:$tablet)
			p
				width 100%
	.column-right
		margin-top 30px
		
	img
		clip-path polygon(8% 0, 100% 0, 87% 100%, 0 79%)
	@media (min-width: $tablet)
		.contained
			flex_box()
			flex_wrap(nowrap)
			flex_direction(row)
			justify_content(space-between)
			.column
				width 50%
				margin-top 0
			.column-left
				// padding 0 5vw 0 0
				padding 0 60px 0 0
			.column-right
				// padding 0 0 0 5vw
				padding 0 0 0 60px
				width auto
				min-width 400px
		&.align-right-column-center
			.contained .column-right
				flex_box()
				flex_direction(column)
				align_items(flex-start)

.text-only-2-columns--spacing
	margin-top 10vw
	margin-bottom 10vw
