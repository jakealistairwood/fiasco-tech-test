/*
* BLOCK STYLING
*
*/

.spacer
	display block
	height 6vw

.spacer--large
	height 12vw

.block
	p
		color #809999
		.button
			color #809999
			border-bottom-color #809999
		.cta
			color var(--darkgreen)
			&.button
				border-bottom 0
		&:last-of-type
			margin-bottom 0
	&:not(.dark-background)
		blockquote
			p
				color var(--darkgreen)
		p.caps
			color var(--darkgreen)
	.text-column
		h4
			font-family var(--textFont)
		ul
			margin-top 1.5em
			margin-bottom 19px
			li
				position relative
				padding-left 46px
				margin-bottom 30px
				min-height 27px
				&::before
					content ""
					display block
					position absolute
					top 0
					left 0
					width 26px
					height 27px
					background-image url(img/annotations/awkward-star.svg)
					background-size 26px 27px
					background-repeat no-repeat
				&:last-child
					margin-bottom 0
	&:last-child
		margin-bottom 0
	&.dark-background
		padding-top 12vw
		padding-bottom 12vw
		margin-bottom 0
		.text-column
			ul li::before
				background-image url(img/annotations/awkward-star-pink.svg)
		p
			color var(--pink)
			.button
				color var(--pink)
				border-bottom-color var(--pink)
		+ .dark-background
			margin-top -12vw
	.wp-block-column
		@media (min-width: $tablet)
			h1,h2,h3,h4,h5,h6,p
				padding 0 5vw
			figure
				margin 0

