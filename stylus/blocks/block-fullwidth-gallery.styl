.fullwidth-gallery
	display block
	margin-left 0
	margin-right 0
	ul
		flex_box()
		flex_direction(column)
		li
			margin-bottom 30px
			@media (max-width: 767px)
				&:last-child
					margin-bottom 0
		img
			width 100%
	@media (min-width: $tablet)
		ul
			flex_direction(row)
			flex_wrap(wrap)
			margin-right -1rem
			margin-left -1rem
			li
				// width calc(50% - (0.9375rem *2))
				// margin 0.9375rem
	@media (min-width: $laptop)
		ul
			flex_wrap(nowrap)
			justify_content(center)
			margin-top 0
			margin-bottom 0
			li
				margin 0 1rem
				flex-basis 100%
			img
				object-fit cover
				min-height 100%
	@media (min-width: $desktop)
		.contained
			padding 0 4vw
			max-width none
			width 100%
